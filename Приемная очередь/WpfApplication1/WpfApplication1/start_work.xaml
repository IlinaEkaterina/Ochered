<Window x:Class="WpfApplication1.start_work"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Прием" Height="300" Width="250" WindowStartupLocation="CenterScreen">

   
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="34*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="16"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.ColumnSpan="2">
            <MenuItem Name="scr" Header="Назад" Click="scr_Click_1" />
        </Menu>        
        <Button Grid.ColumnSpan="2" Grid.Row="4" Content="Принял" Click="Button_Click_1" Margin="30,2,30,2"></Button>
        <Button Grid.ColumnSpan="2" Grid.Row="5" Content="Не пришел" Click="Button_Click_2" Margin="30,2,30,2"></Button>
        <Button Grid.ColumnSpan="2" Grid.Row="6" Content="Окончил прием" Click="Button_Click_3"  Margin="30,4,30,0"></Button>
        <Label Visibility="Collapsed" Name="type"></Label>
    </Grid>
</Window>
